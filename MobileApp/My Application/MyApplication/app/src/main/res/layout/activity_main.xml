<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F6F6"
    tools:context=".MainActivity">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="487dp"
        android:layout_height="203dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:background="@color/block"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="158dp"
            android:layout_height="184dp"
            android:contentDescription="@string/camera_name"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_camera_svgrepo_com" />

        <TextView
            android:id="@+id/text1"
            android:layout_width="198dp"
            android:layout_height="58dp"
            android:fontFamily="@font/montserrat_subrayada_bold"
            android:rotationX="21"
            android:text="@string/text1"
            tools:layout_editor_absoluteX="178dp"
            tools:layout_editor_absoluteY="78dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/text2"
        android:layout_width="69dp"
        android:layout_height="33dp"
        android:fontFamily="@font/montserrat_subrayada_bold"
        android:rotationX="21"
        android:text="@string/text2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="249dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="103dp"
        android:layout_height="113dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.22"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/cameraswitch_black_24dp"
        tools:layout_editor_absoluteY="298dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Регистрация"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.829"
        app:layout_constraintStart_toEndOf="@+id/imageView2"
        tools:layout_editor_absoluteY="332dp" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="129dp"
        android:layout_height="118dp"
        tools:layout_editor_absoluteX="141dp"
        tools:layout_editor_absoluteY="513dp" />

    <TextView
        android:id="@+id/text3"
        android:layout_width="147dp"
        android:layout_height="26dp"
        android:fontFamily="@font/montserrat_subrayada_bold"
        android:rotationX="21"
        android:text="@string/text3"
        tools:layout_editor_absoluteX="24dp"
        tools:layout_editor_absoluteY="480dp" />

    <TextView
        android:id="@+id/text4"
        android:layout_width="182dp"
        android:layout_height="22dp"
        android:fontFamily="@font/montserrat_subrayada_bold"
        android:rotationX="21"
        android:text="@string/text4"
        tools:layout_editor_absoluteX="227dp"
        tools:layout_editor_absoluteY="479dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        tools:layout_editor_absoluteX="45dp"
        tools:layout_editor_absoluteY="515dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        tools:layout_editor_absoluteX="290dp"
        tools:layout_editor_absoluteY="519dp" />


</androidx.constraintlayout.widget.ConstraintLayout>
